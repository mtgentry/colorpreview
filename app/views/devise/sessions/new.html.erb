<% content_for :pagetitle do %>Log In<% end %>
<% content_for :description do %>Log in to your account.<% end %>

<%= render 'shared/header' %>
<div class="text-center">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 form__content">
      <div class="form__title"><%= t('login.login') %></div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <% if flash.count > 0 %>
          <div id="error_explanation">
            <% flash.each do |key, value| %>
              <p><%= value %></p>
            <% end %>
          </div>
        <% end %>

        <div class="input-group">
          <%= f.label :email, t('login.email_address') %>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>

        <div class="input-group">
          <%= f.label :password, t('login.password') %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to t('login.forgot_password'), new_password_path(resource_name), class: 'forgot-link' %>

        <div class="button-container">
          <%= f.submit t('login.login'), class: 'btn btn--blue btn--large btn-login' %>
        </div>

        <p><%= t('login.dont_have_account') %>  <%= link_to t('login.here'), pricing_path%></p>

        <% end -%>
      <% end %>
    </div>
  </div>
</div>
  