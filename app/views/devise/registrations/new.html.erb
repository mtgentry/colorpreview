<%= render 'shared/header' %>
<div class="text-center">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 form__content">
      <div class="form__title"><%= t('sign_up.get_started') %></div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="input-group">
          <%= f.label :first_name, t('sign_up.first_name') %>
          <%= f.text_field :first_name, autofocus: true, class: 'form-control', required: true %>
        </div>

        <div class="input-group">
          <%= f.label :last_name, t('sign_up.last_name') %>
          <%= f.text_field :last_name, autofocus: true, class: 'form-control', required: true %>
        </div>

        <div class="input-group">
          <%= f.label :email, t('sign_up.email_address') %>
          <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
        </div>

        <div class="input-group">
          <%= f.label :password, t('sign_up.password') %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true %>
        </div>

        <div class="input-group">
          <%= f.label :password_confirmation, t('sign_up.confirm_password') %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: true %>
        </div>

        <div class="button-container">
          <%= f.submit t('sign_up.done'), class: 'btn btn--blue btn--large btn-login' %>
        </div>

        <p><%= t('sign_up.have_an_account') %>  <%= link_to t('sign_up.login'), new_user_session_path%></p>

      <% end %>
    </div>
  </div>
</div>
