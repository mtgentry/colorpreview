<% content_for :pagetitle do %><%= t('pricing.upgrade') %><% end %>
<% content_for :description do %><%= t('pricing.upgrade_to_premium') %><% end %>

<div class="page-content">
  <%= render 'shared/header' %>

  <div class="app_container app_container--pricing">
    <div class="page-title__container">
      <h2 class="page-title">
        <%= t('pricing.conquer_color_like_a_pro') %>
        <p class="p-sub">
          <%= t('pricing.one_time_payment_no_subscription') %>
        </p>
      </h2>
    </div>

    <div class="plans__container content-pay">
      <%= simple_form_for :select_plan do |f| %>
        <div class="plan__form">
          <% @plans.reverse_each do |plan| %>
          <div class="plan__item">
            <% if plan.transform_quantity.divide_by.eql?(5) %>
              <div class="plan__best-value">
                <span class="plan__best-value__text">
                  <%= t('pricing.best_value').upcase %>
                </span>
              </div>
            <% end %>
            <div class="plan__container">
              <label class="plan__label">
                <span class="label__title"><%= plan_detail(plan, "amount") %></span>
                <span class="label__description"><%= plan_detail(plan, "desc").html_safe %></span>
                <span class="plan__pricing">
                  <span class="plan__dollar_sign">$</span>
                  <span><%= plan_detail(plan, "price") %></span>
                  <span class="label__payment">
                    <%= t('pricing.one_time_payment') %>
                  </span>
                </span>
                <div class="plans__description"><%= plan_detail(plan, "transform_usage") %></div> 
              </label>
              <div class="stripe-button-container">
                <%# if current_user.present? %>
                  <%#= link_to 'javascript:void(0)', class: "btn btn--blue btn--block checkout-btn", data: {planid: plan.id} do %>
                    <%#= t('pricing.buy_now').upcase %>
                  <%# end %>
                <%# else %>
                  <%= link_to payment_info_path(plan_id: plan.id), class: "btn btn--blue btn--block" do %>
                    <%= t('pricing.buy_now').upcase %>
                  <% end %>
                <%# end %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>

      <div class="plan_logo">
        <h6 class="plan_logo__title"><%= t('pricing.color_supply_is_used') %></h6>
        <%= image_tag('logos.svg', alt: 'Companies logo')%>
      </div>

    </div>
  </div>

